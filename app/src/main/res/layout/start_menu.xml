<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MenuActivity">

    <Button
        android:id="@+id/button_start_ride"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Start Ride"
        android:textSize="30dp"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/button_contacts"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="Contacts"
        android:layout_below="@id/button_start_ride"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/button_find_me"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Find Me"
        android:textSize="30dp"
        android:layout_below="@id/button_contacts"
        android:layout_marginBottom="16dp"
       />

    <Button
        android:id="@+id/button_sos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="SOS"
        android:layout_below="@id/button_find_me" />

</RelativeLayout>
