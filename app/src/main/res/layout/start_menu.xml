<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    tools:context=".activities.MenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@id/logout_btn">

        <Button
            android:id="@+id/button_start_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Start Ride"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_start_ride"
            android:layout_marginBottom="16dp"
            android:text="Contacts"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_find_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_contacts"
            android:layout_marginBottom="16dp"
            android:text="Find Me"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_sos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_find_me"
            android:text="SOS"
            android:textSize="30dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:text="Log out"
        android:textSize="30dp"
        android:gravity="center"/>

</RelativeLayout>
