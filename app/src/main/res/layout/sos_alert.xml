<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/error_background"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4">

    <!-- Felkiáltójel ikon -->

    <!-- Accident Detected szöveg -->

    <ImageView
        android:layout_width="277dp"
        android:layout_height="241dp"
        android:src="@drawable/baseline_error_outline_24"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text="ACCIDENT DETECTED"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <!-- Kocsi ikon -->
    <!-- Help is on the way szöveg -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <ImageView
            android:layout_width="177dp"
            android:layout_height="141dp"
            android:src="@drawable/baseline_minor_crash_24"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HELP IS ON THE WAY"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>
